@model BoardGameDB.Pages.Shared.ThemeSettings



<script>
        console.log("_ThemePartial");
        var r = document.querySelector(':root');
        var settings = @Json.Serialize(Model.GetCssRootVarSettings());
        for (var key in settings) {
            var setting = settings[key];
            r.style.setProperty(setting.name, setting.value);
        }

        // Set navbar toggler icon color
        var navbarStrokeColorString = "@Model.NavbarTextColor.Value";
        var navbarStrokeColorRgba = colorStringToRgba(navbarStrokeColorString);
        r.style.setProperty("--bgdb-theme-navbar-toggler-icon-url", 
        `url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='${navbarStrokeColorRgba}' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e")`);
</script>
