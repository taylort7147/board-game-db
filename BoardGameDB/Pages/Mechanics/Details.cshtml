@page
@model BoardGameDB.Pages_Mechanics.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mechanic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mechanic.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mechanic.Name)
        </dd>
    </dl>
</div>
<div>
    <h5>Games with this mechanic</h5>
    <dl class="row">
        <dt></dt>
        <dd class="col-sm-10">
            @foreach (var game in Model.Mechanic.Games)
            {
                <a class="btn btn-outline-primary mb-1" asp-page="/Games/Details" asp-route-id="@game.Id">@game.Title</a>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Mechanic?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
